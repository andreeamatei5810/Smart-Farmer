<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="chat.ChatContactActivity"
                                                   android:id="@+id/chatLayout"
                                                    android:orientation="vertical" >


    <TextView
            android:text="@string/messages"
            android:layout_width="130dp"
            android:layout_height="wrap_content" android:id="@+id/titleMessage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="150dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp" android:layout_marginEnd="178dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="30dp"
            android:textSize="24sp" android:textColor="#601414"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button
                android:text="@string/back_to_main"
                android:layout_width="146dp"
                android:layout_height="wrap_content" android:id="@+id/backToMain"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp" tools:ignore="ButtonStyle"/>

    </LinearLayout>
</LinearLayout>