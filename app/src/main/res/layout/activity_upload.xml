<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UploadActivity">


    <EditText
        android:id="@+id/prodN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter product name!"
        android:maxLength="25"
        android:textColor="@color/purple_icon"
        android:textColorHint="@color/purple_icon" />
    <EditText
        android:id="@+id/prodP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Enter product price!"
        android:maxLength="25"
        android:layout_below="@+id/prodN"
        android:textColor="@color/purple_icon"
        android:textColorHint="@color/purple_icon" />
    <EditText
        android:id="@+id/prodD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Enter product description!"
        android:maxLength="25"
        android:layout_below="@+id/prodP"
        android:textColor="@color/purple_icon"
        android:textColorHint="@color/purple_icon"/>

    <ImageView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/image"
        android:layout_below="@+id/prodD"
        android:src="@drawable/ic_photo_add"
        android:scaleType="centerCrop"
        android:onClick="chooseImage"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:layout_marginTop="35dp"
        android:id="@+id/buttonSave"
        android:layout_below="@+id/image"
        android:background="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:onClick="storeImage"


        />

    <Button
        android:id="@+id/buttonShowActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSave"
        android:layout_marginTop="2dp"
        android:background="@android:color/holo_green_dark"
        android:text="Move to show activity"
        android:textColor="@android:color/white"

        />


</RelativeLayout>