<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            tools:context=".ClientProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/profileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginEnd="172dp"
                android:text="@string/your_profile"
                android:textColor="#9E1C1C"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.431" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
        />
        <TextView
                android:id="@+id/seeUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ems="10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="230dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:textSize="18sp" android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/usernameText" android:layout_marginBottom="46dp"
                app:layout_constraintBottom_toTopOf="@+id/phoneNumberText"/>
        <TextView
                android:text="@string/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usernameText"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="175dp"
                android:layout_marginEnd="302dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/seeUsername"/>

        <Button
                android:text="@string/make_profile_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/editPrivacy"
                app:backgroundTint="#9C2020"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/profileTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginBottom="41dp"
                app:layout_constraintBottom_toTopOf="@+id/usernameText"
                app:layout_constraintEnd_toStartOf="@+id/backMain"
        />
        <TextView
                android:text="@string/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/phoneNumberText"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="267dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginBottom="19dp" app:layout_constraintBottom_toTopOf="@+id/seePhoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/seeUsername"/>
        <TextView
                android:id="@+id/seePhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ems="10"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="230dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:textSize="18sp"
                android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/phoneNumberText"/>
        <TextView
                android:text="@string/food_preferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/preferencesText"
                android:textSize="18sp" android:layout_marginTop="47dp"
                app:layout_constraintTop_toBottomOf="@+id/seePhoneNumber" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginEnd="243dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/seePreferences"/>
        <TextView
                android:id="@+id/seePreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:ems="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/preferencesText" android:layout_marginBottom="31dp"
                app:layout_constraintBottom_toTopOf="@+id/deleteAccount"/>
        <Button
                android:text="@string/delete_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteAccount"
                app:backgroundTint="#9C2020"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintEnd_toStartOf="@+id/editAccount" android:layout_marginEnd="52dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@+id/seePreferences"/>
        <Button
                android:text="@string/edit_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#9C2020"
                android:id="@+id/editAccount"
                app:layout_constraintStart_toEndOf="@+id/deleteAccount" android:layout_marginTop="370dp"
                app:layout_constraintTop_toBottomOf="@+id/editPrivacy" android:layout_marginEnd="49dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="30dp"/>
        <Button
                android:text="@string/back_to_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/backMain"
                android:layout_marginStart="43dp"
                app:backgroundTint="#9C2020"
                app:layout_constraintStart_toEndOf="@+id/editPrivacy" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/profileTitle" android:layout_marginBottom="371dp"
                app:layout_constraintBottom_toTopOf="@+id/editAccount" android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>